generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(PORTAL)
  createdAt DateTime @default(now())

  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  contact             Contact?
}

enum UserRole {
  ADMIN
  PORTAL
  INTERNAL
}

// =========================
// REFRESH TOKEN TABLE
// =========================
model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique // hashed refresh token
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique // hashed reset token
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?

  @@index([token])
  @@index([userId])
}

// =========================
// SUBSCRIPTION & RECURRING PLAN
// =========================

enum BillingPeriodUnit {
  DAY
  MONTH
  YEAR
}

model Contact {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String?
  address     String?
  companyName String?
  userId      Int?     @unique
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subscriptions Subscription[]
  invoices      Invoice[]

  @@index([email])
  @@index([userId])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  productType String?
  salesPrice  Decimal  @db.Decimal(12, 2)
  costPrice   Decimal? @db.Decimal(12, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subscriptionLines SubscriptionLine[]
  invoiceLines      InvoiceLine[]
  discounts         Discount[]
}

model RecurringPlan {
  id                    Int       @id @default(autoincrement())
  name                  String
  minQuantity           Int       @default(1)
  startDate             DateTime?
  endDate               DateTime?
  autoClose             Boolean   @default(false)
  autoCloseValidityDays Int?
  pausable              Boolean   @default(true)
  renewable             Boolean   @default(true)
  closable              Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  prices        RecurringPlanPrice[]
  subscriptions Subscription[]
}

model RecurringPlanPrice {
  id                 Int              @id @default(autoincrement())
  recurringPlanId    Int
  recurringPlan      RecurringPlan    @relation(fields: [recurringPlanId], references: [id], onDelete: Cascade)
  price              Decimal          @db.Decimal(12, 2)
  billingPeriodValue Int
  billingPeriodUnit  BillingPeriodUnit
  isDefault          Boolean          @default(false)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@unique([recurringPlanId, billingPeriodValue, billingPeriodUnit])
  @@index([recurringPlanId])
}

model QuotationTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]
}

model PaymentTerm {
  id                   Int      @id @default(autoincrement())
  name                 String
  dueAfterDays         Int      @default(0)
  earlyDiscountPercent Decimal? @db.Decimal(5, 2)
  earlyDiscountFixed   Decimal? @db.Decimal(12, 2)
  earlyDiscountDays    Int?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  subscriptions Subscription[]
}

enum SubscriptionState {
  DRAFT
  QUOTATION_SENT
  CONFIRMED
  PAUSED
  CLOSED
  CHURNED
}

model Subscription {
  id                   Int                  @id @default(autoincrement())
  number               String               @unique
  contactId            Int
  contact              Contact              @relation(fields: [contactId], references: [id], onDelete: Restrict)
  recurringPlanId      Int
  recurringPlan        RecurringPlan        @relation(fields: [recurringPlanId], references: [id], onDelete: Restrict)
  state                SubscriptionState    @default(DRAFT)
  expirationDate       DateTime?
  quotationTemplateId  Int?
  quotationTemplate    QuotationTemplate?   @relation(fields: [quotationTemplateId], references: [id], onDelete: SetNull)
  orderDate            DateTime?
  startDate            DateTime?
  nextInvoiceDate      DateTime?
  paymentTermId        Int?
  paymentTerm          PaymentTerm?         @relation(fields: [paymentTermId], references: [id], onDelete: SetNull)
  salespersonId        Int?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt

  lines    SubscriptionLine[]
  invoices Invoice[]

  @@index([contactId])
  @@index([recurringPlanId])
  @@index([state])
  @@index([nextInvoiceDate])
}

model SubscriptionLine {
  id             Int          @id @default(autoincrement())
  subscriptionId Int
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  productId      Int
  product        Product      @relation(fields: [productId], references: [id], onDelete: Restrict)
  quantity       Decimal      @db.Decimal(12, 2)
  unitPrice      Decimal      @db.Decimal(12, 2)
  discountPercent Decimal?    @db.Decimal(5, 2)
  taxPercent     Decimal?     @db.Decimal(5, 2)
  amount         Decimal      @db.Decimal(12, 2)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([subscriptionId])
  @@index([productId])
}

enum InvoiceState {
  DRAFT
  CONFIRMED
  PAID
  CANCELLED
}

enum PaymentMethod {
  ONLINE
  CASH
}

model Invoice {
  id             Int          @id @default(autoincrement())
  number         String       @unique
  subscriptionId Int
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Restrict)
  contactId      Int
  contact        Contact      @relation(fields: [contactId], references: [id], onDelete: Restrict)
  invoiceDate   DateTime
  dueDate        DateTime
  state          InvoiceState @default(DRAFT)
  paymentMethod  PaymentMethod?
  paymentDate    DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  lines InvoiceLine[]

  @@index([subscriptionId])
  @@index([contactId])
  @@index([state])
}

model InvoiceLine {
  id          Int      @id @default(autoincrement())
  invoiceId   Int
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  productId   Int
  product     Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  description String?
  quantity    Decimal  @db.Decimal(12, 2)
  unitPrice   Decimal  @db.Decimal(12, 2)
  taxPercent  Decimal? @db.Decimal(5, 2)
  amount      Decimal  @db.Decimal(12, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([invoiceId])
  @@index([productId])
}

// =========================
// TAXES (MASTER)
// =========================

model Tax {
  id          Int      @id @default(autoincrement())
  name        String
  percent     Decimal  @db.Decimal(5, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name])
  @@index([isActive])
}

model Discount {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  percent   Decimal  @db.Decimal(5, 2)
  isActive  Boolean  @default(true)
  startsAt  DateTime?
  endsAt    DateTime?
  limitUsage Boolean @default(false)
  usageLimit Int?
  timesUsed  Int     @default(0)
  productId  Int?
  product    Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([startsAt])
  @@index([endsAt])
  @@index([productId])
}
